<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textstyledialogmain"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/eaeaea"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/buttonHighlight"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/header_bg"
            android:src="@drawable/scrbble_highlight"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/buttonBrush"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/header_bg"
            android:src="@drawable/scrbble_draw"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonEraser"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@color/header_bg"
            android:src="@drawable/scrbble_erase"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/toplayout"
        android:background="@color/light_gray_999999" />

    <LinearLayout
        android:id="@+id/highlightView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@color/eaeaea"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Top Row -->

        <LinearLayout
            android:id="@+id/paint_highlight1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/hightlightbutton1"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AA8BC9EA"
                android:contentDescription="@string/paint"
                android:tag="#AA8BC9EA" />

            <ImageButton
                android:id="@+id/hightlightbutton2"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAF9E6C9"
                android:contentDescription="@string/paint"
                android:tag="#AAF9E6C9" />

            <ImageButton
                android:id="@+id/highlightbutton3"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AA8DDDC6"
                android:contentDescription="@string/paint"
                android:tag="#AA8DDDC6" />

            <ImageButton
                android:id="@+id/highlightbutton4"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAFEFF74"
                android:contentDescription="@string/paint"
                android:tag="#AAFEFF74" />

            <ImageButton
                android:id="@+id/highlightbutton5"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAF6B2B3"
                android:contentDescription="@string/paint"
                android:tag="#AAF6B2B3" />

            <!-- Bottom Row -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/paint_highlight2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/highlightbutton6"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAB794F6"
                android:contentDescription="@string/paint"
                android:tag="#AAB794F6" />

            <ImageButton
                android:id="@+id/highlightbutton7"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAACDE95"
                android:contentDescription="@string/paint"
                android:tag="#AAACDE95" />

            <ImageButton
                android:id="@+id/highlightbutton8"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAD69FA0"
                android:contentDescription="@string/paint"
                android:tag="#AAD69FA0" />

            <ImageButton
                android:id="@+id/highlightbutton9"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AAEF9BEE"
                android:contentDescription="@string/paint"
                android:tag="#AAEF9BEE" />

            <ImageButton
                android:id="@+id/highlightbutton10"
                android:layout_width="@dimen/large_brush"
                android:layout_height="@dimen/large_brush"
                android:layout_margin="2dp"
                android:background="#AACACACA"
                android:contentDescription="@string/paint"
                android:tag="#AACACACA" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brushView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/eaeaea"
        android:gravity="center"
        android:layout_marginTop="44dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ak.android.widget.colorpickerseekbar.ColorPickerSeekBar
                android:id="@+id/colorpicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:max="1791"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/size" />

            <TextView
                android:id="@+id/tvBrushSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero" />

            <SeekBar
                android:id="@+id/sizeSeekBar"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:progressDrawable="@layout/progress_drawable"
                android:thumb="@drawable/thumb" />

            <View
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:background="#000"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eraserView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/eaeaea"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/size" />

        <TextView
            android:id="@+id/tvEraserSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/zero" />

        <SeekBar
            android:id="@+id/eraser_sizeSeekBar"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:progressDrawable="@layout/progress_drawable"
            android:thumb="@drawable/thumb" />

        <View
            android:id="@+id/eraser_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:background="#000"/>

    </LinearLayout>

</RelativeLayout>