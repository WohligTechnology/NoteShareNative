<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/mainHeadermenue"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        layout="@layout/menu_header_2" />
    <include
        android:id="@+id/titleHeaderview1"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        layout="@layout/title_header_view" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set Passcode"
        android:id="@+id/tvPasscode"
        android:gravity="center"
        android:textColor="@color/note"
        android:onClick="setPasscode" />


</LinearLayout>