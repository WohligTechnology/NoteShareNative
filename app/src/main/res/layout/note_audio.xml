<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_audio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/audio_play"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/play_audio" />

        <SeekBar
            android:id="@+id/audio_seek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/audio_play"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/audio_text"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/audio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:textColor="@color/light_gray_666666"
            android:layout_marginEnd="53dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/audio_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@drawable/cross_audio" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/header_bg"/>

</LinearLayout>