<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!--<include
        android:id="@+id/mainHeadermenue"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        layout="@layout/menu_header_notification" />-->

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/header_bg">

        <ImageButton
            android:id="@+id/imageButtonHamburg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_hamburg" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:src="@drawable/noteshare_header_logo" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal"
        android:text="NOTIFICATION CENTER"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/header_bg" />

    <include
        android:id="@+id/titleHeaderview1"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        layout="@layout/title_header_view"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listviewNotification"
        android:layout_width="match_parent"
        android:divider="@color/eaeaea"
        android:dividerHeight="0.5dp"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>